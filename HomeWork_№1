#include <stdio.h>
#include <string.h>

void in(char s[]) {
	printf("Enter array%s:" , s);
	scanf("%s", s);
	
}

void out(char s[]) {
	printf("%s\n", s);
}

void add(char s[]) {
	int i, j;
	char s2[101];
	printf("Ð•lement added to array:");
	scanf("%s", s2);
	j = 0;
	i = strlen(s);
	while (j < strlen(s2)) {
         s[i] = s2[j];
         i++;
         j++;
 	}
}

void del(char s[]) {
	int i, j, k=0, a;
	char s2[101], s3[101];
	printf("The element you want to remove from the array:");
    scanf("%s", s2);
    for (i = 0; i < strlen(s); i++) {
    	a = 0;
    	for (j = 0; j < strlen(s2); j++) {
           if (s[i] == s2[j]) {
           	a++;
           }
    	}
        if (a == 0) {
        	s3[k] = s[i];
        	k++;
        }
    }
    strcpy(s, s3);
}

int main() {
	int q = 0;
	char s1[101]="", s2[101] = "";
	printf("++++++++++++Menu-------------\n");
	printf("*       1.Enter array       *\n");
	printf("*       2.Output array      *\n");
	printf("*       3.Add element       *\n");
	printf("*       4.Delete element    *\n");
	printf("-------------++++++++++++++++\n");
    
    while (q == 0) { 
		printf("Enter menu (1, 2, 3, 4):");
		scanf("%d", &q);
		if (q == 1) {
			printf("First array...");
			in(s1);
			printf("Second array...");
			in(s2);
		    q = 0;
		}
	        if (q == 2) {
		    printf("First array:");
		    out(s1);
		    printf("Second array:");
		    out(s2);
		    q = 0;
			
		}
		if (q == 3) {
		    printf("In first array...");
		    add(s1);
		    printf("In second array...");
		    add(s2);
		    q = 0;
		}
		if (q == 4) {
		    printf("In first array...");
		    del(s1);
		    printf("In second array...");
		    del(s2);
			q = 0;
		}
		if (q > 4) {
		    printf("Enter menu (1, 2, 3, 4):");
		    scanf("%d", &q);
			return 0;
		}
	}
}
